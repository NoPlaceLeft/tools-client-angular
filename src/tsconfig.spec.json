{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "../out-tsc/spec",
        "types": [
            "jest"
        ],
        "paths": {
            "@npl-shared/*": [
                "app/shared/*"
            ],
            "@npl-core/*": [
                "app/core/*"
            ],
            "@npl-models/*": [
                "app/models/*"
            ],
            "@npl-admin/*": [
                "app/admin/*"
            ],
            "@npl-template": [
                "templates/index"
            ]
        }
    },
    "files": [
        "polyfills.ts"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}
