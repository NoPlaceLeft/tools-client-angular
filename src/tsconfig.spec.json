{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "../out-tsc/spec",
        "module": "commonjs",
        "types": [
            "jasmine",
            "node"
        ],
        "paths": {
            "@shared/*": [
                "app/shared/*"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@admin/*": [
                "app/admin/*"
            ],
            "@templates": [
                "templates/index"
            ]
        }
    },
    "files": [
        "test.ts",
        "polyfills.ts"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}
