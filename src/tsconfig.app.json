{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "paths": {
            "@npl-shared/*": [
                "app/shared/*"
            ],
            "@npl-core/*": [
                "app/core/*"
            ],
            "@npl-models/*": [
                "app/models/*"
            ],
            "@npl-admin/*": [
                "app/admin/*"
            ],
            "@npl-template": [
                "templates/index"
            ],
            "lodash": [
                "../node_modules/lodash-es"
            ]
        }
    },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
