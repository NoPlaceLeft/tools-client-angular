{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "paths": {
            "@npl-shared/*": [
                "app/shared/*"
            ],
            "@npl-core/*": [
                "app/core/*"
            ],
            "@npl-models/*": [
                "app/models/*"
            ],
            "@npl-admin/*": [
                "app/admin/*"
            ],
            "@npl-template": [
                "templates/index"
            ],
            "@npl-store": [
                "app/store/index"
            ],
            "@npl-auth": [
                "../projects/auth/src/public-api"
            ],
            "@npl-idp": [
                "../projects/idp/src/public-api"
            ],
            "lodash": [
                "../node_modules/lodash-es"
            ]
        }
    },
    "files": [
        "main.ts",
        "polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ]
}
