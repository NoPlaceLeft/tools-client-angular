{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "baseUrl": "./",
        "paths": {
            "@shared/*": [
                "app/shared/*"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@admin/*": [
                "app/admin/*"
            ],
            "@templates": [
                "templates/index"
            ],
            "lodash": [
                "../node_modules/lodash-es"
            ],
        }
    },
    "exclude": [
        "**/translations.ts",
        "**/templates/*.ts",
        "src/test.ts",
        "**/*.spec.ts",
        "src/app/tools/gen-mapper/gen-map.ts"
    ]
}
