{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "paths": {
            "@npl-shared/*": [
                "app/shared/*"
            ],
            "@npl-core/*": [
                "app/core/*"
            ],
            "@npl-models/*": [
                "app/models/*"
            ],
            "@npl-admin/*": [
                "app/admin/*"
            ],
            "@npl-template": [
                "templates/index"
            ],
            "lodash": [
                "../node_modules/lodash-es"
            ]
        }
    },
    "exclude": [
        "**/translations.ts",
        "**/templates/*.ts",
        "setupJest.ts",
        "**/*.spec.ts",
        "app/tools/gen-mapper/gen-map.ts"
    ]
}
